{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "jsx": "react",
    "noEmitOnError": false,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "strict": true,
    "module": "Node16"
  },
  "include": [
    "./typings/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts"
  ]
}
